<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_diaTv_maTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã thành viên"
            android:focusable="false"
            android:background="#FAF6F6"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_diaTv_tenTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên thành viên"
            android:background="#FAF6F6"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_diaTv_ngaySinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày sinh"
            android:drawableEnd="@drawable/calendar"
            android:background="#FAF6F6"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_diaTv_cccdTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cccd"
            android:background="#FAF6F6"/>
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <Button
            android:id="@+id/btn_diaTv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="16dp"
            android:backgroundTint="#358e9d"/>
        <Button
            android:id="@+id/btn_diaTv_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:textSize="16dp"
            android:layout_marginLeft="50dp"
            android:backgroundTint="#358e9d"/>
    </LinearLayout>

</LinearLayout>